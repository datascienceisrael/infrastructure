{
    "validator": {
        "$jsonSchema": {
            "bsonType": "object",
            "required": ["name", "year"],
            "properties": {
                "name": {
                    "bsonType": "xx",
                    "description": "must be a string and is required"
                },
                "year": {
                    "bsonType": "int",
                    "minimum": 2000,
                    "maximum": 2019,
                    "description": "must be an integer in [ 2000, 2019 ] and is required"
                }
            }
        }
    }
}
